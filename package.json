{
  "name": "twoshots.vodka",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint-server": "eslint src/server/**/*.js",
    "dev": "nodemon --watch ./src/server --exec \"npm run lint-server && node ./src/server/dev.js\"",
    "prod": "npm run build && node ./src/server/prod.js",
    "serve": "vue-cli-service serve src/client/main.js",
    "build": "vue-cli-service build src/client/main.js",
    "lint": "vue-cli-service lint src/client/main.js"
  },
  "dependencies": {
    "@influxdata/influxdb-client": "^1.26.0",
    "bulma": "^0.9.1",
    "core-js": "^3.6.5",
    "express": "^4.17.1",
    "fastest-levenshtein": "^1.0.12",
    "lodash": "^4.17.20",
    "lodash-es": "^4.17.15",
    "marked": "^2.0.0",
    "qrcode": "^1.4.4",
    "socket.io": "^3.0.3",
    "socket.io-client": "^3.0.3",
    "vue": "^3.0.0",
    "vue-router": "^4.0.0-0",
    "vue-socket.io-extended": "^4.0.5",
    "vuex": "^4.0.0-rc.2",
    "winston": "^3.4.0",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^7.0.0-0",
    "nodemon": "^2.0.6"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "@vue/airbnb"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "lines-between-class-members": [
        "error",
        "always",
        {
          "exceptAfterSingleLine": true
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "packageDir": "."
        }
      ],
      "no-unused-expressions": "off",
      "no-param-reassign": "off",
      "import/extensions": "off",
      "no-restricted-syntax": "off",
      "max-len": [
        "error",
        {
          "code": 140
        }
      ],
      "max-classes-per-file": "off",
      "no-use-before-define": "off",
      "template-curly-spacing": "off",
      "indent": [
        "error",
        2,
        {
          "ignoredNodes": [
            "TemplateLiteral"
          ]
        }
      ],
      "class-methods-use-this": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
